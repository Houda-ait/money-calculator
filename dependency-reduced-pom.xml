<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>${project.groupId}</groupId>
  <artifactId>money-calculator</artifactId>
  <version>${project.version}</version>
  <build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>${main.class}</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>jpackage</executable>
          <arguments>
            <argument>--input</argument>
            <argument>target/</argument>
            <argument>--name</argument>
            <argument>${project.artifactId}</argument>
            <argument>--main-jar</argument>
            <argument>${project.artifactId}.jar</argument>
            <argument>--main-class</argument>
            <argument>${main.class}</argument>
            <argument>--type</argument>
            <argument>exe</argument>
            <argument>--icon</argument>
            <argument>src/main/resources/icon.ico</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>21</maven.compiler.target>
    <project.groupId>ulpgc.software</project.groupId>
    <main.class>software.ulpgc.moneycalculator.apps.view.swing.SwingMain</main.class>
    <maven.compiler.source>21</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.artifactId>money-calculator</project.artifactId>
    <project.version>1.0-SNAPSHOT</project.version>
  </properties>
</project>
